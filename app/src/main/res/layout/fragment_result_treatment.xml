<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#eee"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="3dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="3dp"
        android:text="@string/test_result"
        android:textColor="#888"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/labelResult">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingBottom="3dp"
            android:text="@string/chromium_vi"
            android:textColor="#666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444"
            android:textSize="17sp"
            tools:text="15000" />

        <TextView
            android:id="@+id/textUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="1dp"
            android:text="@string/mg_l"
            android:textColor="#777"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="#eee"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="3dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="3dp"
        android:text="@string/enter_water_quantity"
        android:textColor="#888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/resultLayout" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="48dp"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="numberDecimal"
        android:maxLength="9"
        android:maxLines="1"
        android:minWidth="80dp"
        android:paddingStart="2dp"
        android:paddingEnd="10dp"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        tools:text="1122.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"
        android:text="@string/litres"
        android:textColor="#3d3d3d"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/editResult"
        app:layout_constraintStart_toEndOf="@id/editResult" />

    <TextView
        android:id="@+id/tv_recommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#eee"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="3dp"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="3dp"
        android:text="@string/recommendation"
        android:textColor="#888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/editResult" />

    <com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:expansion_openOnlyOne="true"
        app:layout_constraintTop_toBottomOf="@id/tv_recommendation">

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:expansion_headerIndicator="@id/headerIndicator"
            app:expansion_layout="@id/expansionLayout"
            app:expansion_toggleOnClick="true">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tv_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="@string/chemical_coagulation"
                android:textSize="15sp"
                android:textStyle="normal" />

            <!-- HEADER INDICATOR -->
            <ImageView
                android:id="@+id/headerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CONTENT -->
            <TextView
                android:id="@+id/recommendation1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:lineSpacingExtra="5dp"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:textAlignment="textStart"
                android:textColor="#666"
                android:textSize="16sp"
                tools:text="@string/iron_sulphate_recommendation" />

        </com.github.florent37.expansionpanel.ExpansionLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd" />

        <com.github.florent37.expansionpanel.ExpansionHeader
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:expansion_headerIndicator="@id/headerIndicator2"
            app:expansion_layout="@id/expansionLayout2"
            app:expansion_toggleOnClick="true">

            <!-- HEADER -->
            <TextView
                android:id="@+id/tv_header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="@string/electrocoagulation"
                android:textSize="16sp"
                android:textStyle="normal" />

            <!-- HEADER INDICATOR -->
            <ImageView
                android:id="@+id/headerIndicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


        </com.github.florent37.expansionpanel.ExpansionHeader>

        <com.github.florent37.expansionpanel.ExpansionLayout
            android:id="@+id/expansionLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CONTENT -->
            <TextView
                android:id="@+id/recommendation2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#fff"
                android:lineSpacingExtra="5dp"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:textAlignment="textStart"
                android:textColor="#666"
                android:textSize="16sp"
                tools:text="@string/electrocoagulation_recommendation" />

        </com.github.florent37.expansionpanel.ExpansionLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd" />

    </com.github.florent37.expansionpanel.viewgroup.ExpansionsViewGroupLinearLayout>

